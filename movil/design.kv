#:kivy 2.1.0

<CustomTextField@MDTextField>:
    mode: "rectangle"
    fill_color: 225/255, 217/255, 209/255, 1
    md_bg_color: 225/255, 217/255, 209/255, 1
    text_color: 95/255, 79/255, 66/255, 1
    font_size: "14sp"
    multiline: False

<NavigationBar@MDBoxLayout>:
    padding: "10dp"
    spacing: "10dp"
    adaptive_width: True
    pos_hint: {"center_x": .5, "center_y": .5}
    
    MDFlatButton:
        text: "INICIO"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("home")
    
    MDFlatButton:
        text: "PERDÍ A MI MASCOTA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("lost_pet")
    
    MDFlatButton:
        text: "ENCONTRÉ UNA MASCOTA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("found_pet")
    
    MDFlatButton:
        text: "CÓMO FUNCIONA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("how_it_works")
    
    MDFlatButton:
        text: "MÁS INFORMACIÓN"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("more_info")

<BaseScreen>:
    selected_file_label: self.selected_file_label
    md_bg_color: 234/255, 230/255, 223/255, 1
    
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        
        MDTopAppBar:
            title: ""
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "0dp"

        MDTopAppBar:
            size_hint_y: 0.1
            height: "80dp"
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1
            NavigationBar:

        MDBoxLayout:
            orientation: "vertical"
            spacing: "20dp"
            size_hint_y: 0.9
            padding: "20dp"
            
            MDLabel:
                text: "¡Te ayudamos a encontrar a tu mascota!"
                halign: "center"
                font_style: "H3"
                theme_text_color: "Custom"
                text_color: 95/255, 79/255, 66/255, 1
                size_hint_y: None
                height: self.texture_size[1]
                markup: True

            MDLabel:
                text: "¿Perdiste a tu mascota o encontraste una mascota perdida? Esta aplicación está aquí para ayudar a las mascotas a volver a sus hogares."
                halign: "center"
                font_style: "Body1"
                theme_text_color: "Custom"
                text_color: 95/255, 79/255, 66/255, 1
                size_hint_y: None
                height: self.texture_size[1]

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "20dp"
                size_hint_y: None
                height: "60dp"
                pos_hint: {"center_x": 0.5}
                
                MDRaisedButton:
                    text: "PERDÍ A MI MASCOTA"
                    md_bg_color: 95/255, 79/255, 66/255, 1
                    text_color: 1, 1, 1, 1
                    size_hint_x: None
                    width: "200dp"
                    on_release: root.parent.current = "lost_pet"
                
                MDRaisedButton:
                    text: "ENCONTRÉ UNA MASCOTA"
                    md_bg_color: 95/255, 79/255, 66/255, 1
                    text_color: 1, 1, 1, 1
                    size_hint_x: None
                    width: "200dp"
                    on_release: root.parent.current = "found_pet"

<LostPetScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        
        MDTopAppBar:
            title: ""
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1
            NavigationBar:

        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "20dp"

            MDLabel:
                text: "Selecciona la ubicación donde se perdió tu mascota"
                halign: "left"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: 95/255, 79/255, 66/255, 1
                size_hint_y: None
                height: self.texture_size[1]

            MDRaisedButton:
                text: "Abrir Google Maps"
                md_bg_color: 95/255, 79/255, 66/255, 1
                on_release: root.open_file_chooser()
                pos_hint: {"center_x": .5}

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.8
                spacing: "20dp"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_x: 0.5
                    spacing: "20dp"
                    
                    MDLabel:
                        text: "Cargá los datos de la mascota"
                        halign: "left"
                        font_style: "H5"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDGridLayout:
                        cols: 2
                        spacing: "10dp"
                        size_hint_y: None
                        height: self.minimum_height
                        
                        CustomTextField:
                            id: raza_field
                            hint_text: "Raza"
                        
                        CustomTextField:
                            id: color_field
                            hint_text: "Color"
                        
                        CustomTextField:
                            id: zona_field
                            hint_text: "Zona"
                        
                        CustomTextField:
                            id: telefono_field
                            hint_text: "Teléfono"

                    CustomTextField:
                        id: email_field
                        hint_text: "Email"
                        size_hint_y: None
                        height: "48dp"

                    MDTextField:
                        id: mensaje_field
                        hint_text: "Mensaje"
                        mode: "rectangle"
                        multiline: True
                        size_hint_y: None
                        height: "100dp"
                        fill_color: 225/255, 217/255, 209/255, 1
                        md_bg_color: 225/255, 217/255, 209/255, 1

                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: "100dp"
                        spacing: "10dp"

                        MDLabel:
                            text: "Foto de la mascota:"
                            theme_text_color: "Custom"
                            text_color: 95/255, 79/255, 66/255, 1
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDLabel:
                            id: selected_file_label
                            text: "Ningún archivo seleccionado"
                            theme_text_color: "Custom"
                            text_color: 95/255, 79/255, 66/255, 1
                            size_hint_y: None
                            height: self.texture_size[1]

                        MDRaisedButton:
                            text: "Seleccionar archivo"
                            md_bg_color: 225/255, 217/255, 209/255, 1
                            text_color: 95/255, 79/255, 66/255, 1
                            size_hint_x: None
                            width: "200dp"
                            on_release: root.open_file_chooser()

                    MDRaisedButton:
                        text: "ENVIAR"
                        md_bg_color: 95/255, 79/255, 66/255, 1
                        size_hint_x: None
                        width: "200dp"
                        pos_hint: {"center_x": .5}
                        on_release: root.submit_form()

<FoundPetScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        
        MDTopAppBar:
            title: ""
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1
            NavigationBar:

        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "10dp"

            CustomTextField:
                hint_text: "Buscar mascota..."
                size_hint_x: 0.8
                pos_hint: {"center_x": .5}
                on_text: root.filter_pets(self.text)

            ScrollView:
                MDGridLayout:
                    id: pets_grid
                    cols: 3
                    spacing: "20dp"
                    padding: "20dp"
                    adaptive_height: True

<HowItWorksScreen>:
    canvas.before:
        Color:
            rgba: 0.98, 0.96, 0.95, 1  # Fondo crema suave
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: "vertical"
        spacing: "15dp"
        
        MDTopAppBar:
            title: ""
            md_bg_color: 95/255, 79/255, 66/255, 1
            elevation: 2
            specific_text_color: 1, 1, 1, 1
            NavigationBar:

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                padding: "25dp"
                spacing: "25dp"
                size_hint_y: None
                height: self.minimum_height

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b]Cargar una Mascota Perdida[/b]"
                        markup: True
                        font_style: "H5"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        text: "Para cargar una mascota perdida, ingresá los detalles más importantes como:\n\n• Raza: Especificá la raza o una descripción general si es desconocida.\n• Color: Ayudá a los demás a identificarla rápidamente.\n• Ubicación: Indicá el lugar donde fue vista por última vez.\n• Fecha: Indicá la fecha cuando fue vista por última vez.\n• Fotos: Las imágenes claras ayudan mucho a la identificación.\n• Contacto: Dejá un número de teléfono para que los posibles halladores puedan comunicarse con vos."
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b]Perdí a mi Mascota[/b]"
                        markup: True
                        font_style: "H5"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        text: "Si perdiste tu mascota, simplemente ingresá sus datos en la sección de 'Cargar Mascota Perdida'. Asegurate de:\n\n• Actualizar tu ubicación: La información precisa aumenta las probabilidades de encontrarla.\n• Incluir una descripción detallada: Cualquier detalle específico como marcas o particularidades puede ser útil.\n• Revisar otras mascotas encontradas: Tal vez alguien haya visto a tu mascota y cargado su información en el sitio."
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b]Encontré una Mascota[/b]"
                        markup: True
                        font_style: "H5"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        text: "Si encontraste una mascota, te recomendamos seguir estos pasos:\n\n• Subí una foto clara para que el dueño pueda reconocerla rápidamente.\n• Incluí información relevante: Descripción, raza, color, características físicas y accesorios como collares o placas de identificación.\n• Comunicarse de inmediato: No dudes en dar un número de contacto para facilitar la conexión con el dueño."
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b]FAQs (Preguntas Frecuentes)[/b]"
                        markup: True
                        font_style: "H5"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        text: "[b][color=#927865]¿Qué datos puedo cargar si encontré una mascota?[/color][/b]\nTe sugerimos cargar los siguientes detalles:\n\n• Raza y color: Esto ayuda a los dueños a identificar a su mascota rápidamente.\n• Accesorios: Si la mascota tiene collar, correa o cualquier accesorio distintivo, menciónalo.\n• Ubicación donde la encontraste: Esto permite que los dueños tengan pistas de dónde buscar."
                        markup: True
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b][color=#927865]¿Hay un límite para cargar mascotas?[/color][/b]\nNo, no hay ningún límite. Podés cargar tantas mascotas como quieras, tanto si las encontraste o las perdiste."
                        markup: True
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b][color=#927865]¿Hasta qué horario funciona la página web?[/color][/b]\nLa página está disponible 24/7. Sin embargo, en caso de mantenimiento, se mostrará un mensaje informándote de la interrupción."
                        markup: True
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b][color=#927865]¿Cómo puedo contactar al dueño de una mascota?[/color][/b]\nUna vez que cargués los datos de la mascota encontrada o perdida, podrás agregar tu número de teléfono o correo electrónico para que las personas puedan contactarte directamente."
                        markup: True
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

                MDCard:
                    orientation: "vertical"
                    padding: "20dp"
                    spacing: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    md_bg_color: 1, 1, 1, 1
                    elevation: 1
                    radius: [10, 10, 10, 10]

                    MDLabel:
                        text: "[b][color=#927865]¿Cómo puedo actualizar la información de una mascota que encontré?[/color][/b]\nSi encontraste una mascota y tenés nueva información sobre ella, podés actualizar la publicación accediendo a tu perfil y modificando los detalles."
                        markup: True
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]

<MoreInfoScreen>:
