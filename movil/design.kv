#:kivy 2.1.0

<CustomTextField@MDTextField>:
    mode: "rectangle"
    fill_color: 225/255, 217/255, 209/255, 1
    md_bg_color: 225/255, 217/255, 209/255, 1
    text_color: 95/255, 79/255, 66/255, 1
    font_size: "14sp"
    multiline: False

<NavigationBar@MDBoxLayout>:
    padding: "10dp"
    spacing: "10dp"
    adaptive_width: True
    pos_hint: {"center_x": .5, "center_y": .5}
    
    MDFlatButton:
        text: "INICIO"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("home")
    
    MDFlatButton:
        text: "PERDÍ A MI MASCOTA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("lost_pet")
    
    MDFlatButton:
        text: "ENCONTRÉ UNA MASCOTA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("found_pet")
    
    MDFlatButton:
        text: "CÓMO FUNCIONA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("how_it_works")
    
    MDFlatButton:
        text: "MÁS INFORMACIÓN"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("more_info")

<BaseScreen>:
    selected_file_label: self.selected_file_label
    md_bg_color: 234/255, 230/255, 223/255, 1  # #EAE6DF
    
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        
        MDTopAppBar:
            title: ""
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "0dp"

        MDTopAppBar:
            size_hint_y: 0.1
            height: "80dp"
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1
            NavigationBar:

        MDBoxLayout:
            orientation: "vertical"
            spacing: "20dp"
            size_hint_y: 0.9
            padding: "20dp"
            
            MDLabel:
                text: "¡Te ayudamos a\\nencontrar a tu mascota!"
                halign: "center"
                font_style: "H3"
                theme_text_color: "Custom"
                text_color: 95/255, 79/255, 66/255, 1
                size_hint_y: None
                height: self.texture_size[1]
                markup: True

            MDLabel:
                text: "¿Perdiste a tu mascota o encontraste una mascota perdida? Esta aplicación está aquí para ayudar a las mascotas a volver a sus hogares."
                halign: "center"
                font_style: "Body1"
                theme_text_color: "Custom"
                text_color: 95/255, 79/255, 66/255, 1
                size_hint_y: None
                height: self.texture_size[1]

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "20dp"
                size_hint_y: None
                height: "60dp"
                pos_hint: {"center_x": 0.5}
                
                MDRaisedButton:
                    text: "PERDÍ A MI MASCOTA"
                    md_bg_color: 95/255, 79/255, 66/255, 1
                    text_color: 1, 1, 1, 1
                    size_hint_x: None
                    width: "200dp"
                    on_release: root.parent.current = "lost_pet"
                
                MDRaisedButton:
                    text: "ENCONTRÉ UNA MASCOTA"
                    md_bg_color: 95/255, 79/255, 66/255, 1
                    text_color: 1, 1, 1, 1
                    size_hint_x: None
                    width: "200dp"
                    on_release: root.parent.current = "found_pet"

<LostPetScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        
        MDTopAppBar:
            title: ""
            md_bg_color: 95/255, 79/255, 66/255, 1
            specific_text_color: 1, 1, 1, 1
            NavigationBar:

        MDBoxLayout:
            orientation: "horizontal"
            padding: "20dp"
            spacing: "20dp"

            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                spacing: "20dp"
                
                MDLabel:
                    text: "Cargá los datos de la mascota"
                    halign: "left"
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: 95/255, 79/255, 66/255, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDGridLayout:
                    cols: 2
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    
                    CustomTextField:
                        hint_text: "Raza"
                    
                    CustomTextField:
                        hint_text: "Color"
                    
                    CustomTextField:
                        hint_text: "Zona"
                    
                    CustomTextField:
                        hint_text: "Teléfono"

                CustomTextField:
                    hint_text: "Email"
                    size_hint_y: None
                    height: "48dp"

                MDTextField:
                    hint_text: "Mensaje"
                    mode: "rectangle"
                    multiline: True
                    size_hint_y: None
                    height: "100dp"
                    fill_color: 225/255, 217/255, 209/255, 1
                    md_bg_color: 225/255, 217/255, 209/255, 1

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: "100dp"
                    spacing: "10dp"

                    MDLabel:
                        text: "Foto de la mascota:"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        id: selected_file_label
                        text: "Ningún archivo seleccionado"
                        theme_text_color: "Custom"
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDRaisedButton:
                        text: "Seleccionar archivo"
                        md_bg_color: 225/255, 217/255, 209/255, 1
                        text_color: 95/255, 79/255, 66/255, 1
                        size_hint_x: None
                        width: "200dp"
                        on_release: root.open_file_chooser()

                MDRaisedButton:
                    text: "ENVIAR"
                    md_bg_color: 95/255, 79/255, 66/255, 1
                    size_hint_x: None
                    width: "200dp"
                    pos_hint: {"center_x": .5}