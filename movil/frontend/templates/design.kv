#:kivy 2.1.0
# Indica la versión de Kivy que se está utilizando


<CustomTextField@MDTextField>:
    # Definición de un campo de texto personalizado
    mode: "rectangle"  # Estilo del campo de texto
    fill_color: 225/255, 217/255, 209/255, 1  # Color de fondo del campo
    md_bg_color: 225/255, 217/255, 209/255, 1  # Color de fondo para KivyMD
    text_color: 95/255, 79/255, 66/255, 1  # Color del texto en el campo
    font_size: "14sp"  # Tamaño de la fuente
    multiline: False  # Indica que no se permite texto en múltiples líneas


<NavigationBar@MDBoxLayout>:
    # Barra de navegación personalizada
    padding: "10dp"  # Espaciado interno
    spacing: "10dp"  # Espaciado entre los botones
    adaptive_width: True  # Ajusta el ancho según el contenido
    pos_hint: {"center_x": .5, "center_y": .5}  # Ubicación de la barra

    # Botón para ir a la pantalla de inicio
    MDFlatButton:
        text: "INICIO"
        theme_text_color: "Custom"  # Personalización del color del texto
        text_color: 1, 1, 1, 1  # Color blanco
        on_release: root.parent.parent.parent.navigate("home")

    # Botón para ir a la pantalla de mascotas perdidas
    MDFlatButton:
        text: "PERDÍ A MI MASCOTA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("lost_pet")

    # Botón para ir a la pantalla de mascotas encontradas
    MDFlatButton:
        text: "ENCONTRÉ UNA MASCOTA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("found_pet")

    # Botón para ir a la pantalla de cómo funciona la aplicación
    MDFlatButton:
        text: "CÓMO FUNCIONA"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("how_it_works")

    # Botón para ir a la pantalla de más información
    MDFlatButton:
        text: "MÁS INFORMACIÓN"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        on_release: root.parent.parent.parent.navigate("more_info")

<BaseScreen>:
    # Pantalla base que incluye un fondo y opciones generales
    selected_file_label: self.selected_file_label  # Referencia a una etiqueta de archivo seleccionada
    md_bg_color: 234/255, 230/255, 223/255, 1  # Color de fondo de la pantalla

    MDBoxLayout:
        # Caja vertical que organiza elementos en la pantalla
        orientation: "vertical"  # Disposición de elementos en forma vertical
        spacing: "10dp"  # Espaciado entre elementos

        MDTopAppBar:
            # Barra superior de la pantalla
            title: ""  # Título vacío
            md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo de la barra
            specific_text_color: 1, 1, 1, 1  # Color del texto de la barra


<HomeScreen>:
    MDBoxLayout:
        # Estructura principal de la pantalla de inicio con orientación vertical
        orientation: "vertical"
        spacing: "10dp"  # Espaciado entre los elementos del layout
        padding: "0dp"  # Sin margen interno

        MDTopAppBar:
            # Barra superior de la pantalla
            size_hint_y: 0.1  # Proporción de altura respecto a la pantalla
            height: "80dp"  # Altura específica de la barra
            md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo de la barra
            specific_text_color: 1, 1, 1, 1  # Color del texto (blanco)
            NavigationBar:  # Componente de navegación personalizado

        MDBoxLayout:
            # Sección principal de la pantalla debajo de la barra superior
            orientation: "vertical"  # Elementos apilados verticalmente
            spacing: "20dp"  # Espaciado entre elementos
            size_hint_y: 0.9  # Ocupa la mayoría del espacio vertical
            padding: "20dp"  # Margen interno alrededor del contenido
            
            MDLabel:
                # Título principal de la pantalla
                text: "¡Te ayudamos a encontrar a tu mascota!"
                halign: "center"  # Texto centrado horizontalmente
                font_style: "H3"  # Estilo de fuente
                theme_text_color: "Custom"  # Color personalizado del texto
                text_color: 95/255, 79/255, 66/255, 1  # Color marrón del texto
                size_hint_y: None  # Tamaño vertical no escalable
                height: self.texture_size[1]  # Ajusta la altura al tamaño del texto
                markup: True  # Permite formateo con etiquetas en el texto

            MDLabel:
                # Descripción explicativa de la funcionalidad de la app
                text: "¿Perdiste a tu mascota o encontraste una mascota perdida? Esta aplicación está aquí para ayudar a las mascotas a volver a sus hogares."
                halign: "center"  # Texto centrado horizontalmente
                font_style: "Body1"  # Estilo de fuente del cuerpo del texto
                theme_text_color: "Custom"  # Color personalizado del texto
                text_color: 95/255, 79/255, 66/255, 1  # Color marrón del texto
                size_hint_y: None  # Tamaño vertical no escalable
                height: self.texture_size[1]  # Ajusta la altura al tamaño del texto

            # Agregar la imagen
            Image:
                # Imagen decorativa o informativa
                source: "frontend/static/images/mascota3.webp"  # Ruta a la imagen
                size_hint_y: None  # Tamaño vertical fijo
                height: "200dp"  # Altura específica de la imagen
                allow_stretch: True  # Permite estirar la imagen para ajustarse
                keep_ratio: True  # Mantiene la relación de aspecto de la imagen

            MDBoxLayout:
                # Contenedor horizontal para los botones
                orientation: "horizontal"  # Elementos alineados horizontalmente
                spacing: "20dp"  # Espaciado entre los botones
                size_hint_y: None  # Tamaño vertical fijo
                height: "60dp"  # Altura específica del contenedor
                pos_hint: {"center_x": 0.5}  # Centra horizontalmente el contenedor
                
                MDRaisedButton:
                    # Botón para reportar una mascota perdida
                    text: "PERDÍ A MI MASCOTA"
                    md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo del botón
                    text_color: 1, 1, 1, 1  # Texto blanco
                    size_hint_x: None  # Tamaño horizontal fijo
                    width: "200dp"  # Ancho específico del botón
                    on_release: root.parent.current = "lost_pet"  # Navega a la pantalla de mascotas perdidas
                
                MDRaisedButton:
                    # Botón para reportar una mascota encontrada
                    text: "ENCONTRÉ UNA MASCOTA"
                    md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo del botón
                    text_color: 1, 1, 1, 1  # Texto blanco
                    size_hint_x: None  # Tamaño horizontal fijo
                    width: "200dp"  # Ancho específico del botón
                    on_release: root.parent.current = "found_pet"  # Navega a la pantalla de mascotas encontradas


<LostPetScreen>:
    MDBoxLayout:
        # Contenedor principal de la pantalla de "Perdí a mi mascota"
        orientation: "vertical"  # Los elementos se apilan verticalmente
        spacing: "10dp"  # Espaciado entre los elementos del layout

        MDTopAppBar:
            # Barra superior de navegación
            title: ""  # Sin texto en la barra superior
            md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo marrón
            specific_text_color: 1, 1, 1, 1  # Color del texto blanco
            NavigationBar:  # Barra de navegación personalizada con botones

        MDBoxLayout:
            # Contenedor principal para los elementos de la pantalla
            orientation: "vertical"  # Los elementos se apilan verticalmente
            padding: "20dp"  # Margen interno alrededor del contenido
            spacing: "10dp"  # Espaciado entre los elementos

            CustomTextField:
                # Campo de texto personalizado para buscar mascotas
                hint_text: "Buscar mascota..."  # Texto de sugerencia en el campo
                size_hint_x: 0.8  # Ancho relativo al tamaño del contenedor
                pos_hint: {"center_x": .5}  # Centrado horizontalmente
                on_text: root.filter_pets(self.text)  # Llama a la función para filtrar mascotas al escribir

            ScrollView:
                # Área con desplazamiento para mostrar una lista de elementos
                MDGridLayout:
                    # GridLayout para organizar las mascotas en una cuadrícula
                    id: pets_grid  # ID único para identificar y manipular este componente en Python
                    cols: 3  # Número de columnas en la cuadrícula
                    spacing: "20dp"  # Espaciado entre los elementos de la cuadrícula
                    padding: "20dp"  # Margen interno alrededor de los elementos
                    adaptive_height: True  # Ajusta automáticamente la altura al contenido


<FoundPetScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        MDTopAppBar:
            # Barra superior de la aplicación
            title: ""  # Sin texto en la barra
            md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo marrón
            elevation: 2  # Elevación para crear efecto de sombra
            specific_text_color: 1, 1, 1, 1  # Color del texto en blanco
            NavigationBar:  # Barra de navegación personalizada

        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "20dp"

            MDLabel:
                text: "Cargá los datos de la mascota"
                halign: "left"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: 95/255, 79/255, 66/255, 1
                size_hint_y: None
                height: self.texture_size[1]

            MDGridLayout:
                cols: 2  # Dos columnas para organizar los campos
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height

                CustomTextField:
                    id: nombre_field
                    hint_text: "Nombre de la mascota"

                CustomTextField:
                    id: animal_field
                    hint_text: "Animal"

                CustomTextField:
                    id: raza_field
                    hint_text: "Raza"

                CustomTextField:
                    id: color_field
                    hint_text: "Color"

                CustomTextField:
                    id: direccion_field
                    hint_text: "Dirección"

                CustomTextField:
                    id: telefono_field
                    hint_text: "Teléfono"

            MDTextField:
                id: email_field
                hint_text: "Email"
                mode: "rectangle"
                multiline: True
                size_hint_y: None
                height: "100dp"
                fill_color: 225/255, 217/255, 209/255, 1

            MDTextField:
                id: descripcion_field
                hint_text: "Descripción"
                mode: "rectangle"
                multiline: True
                size_hint_y: None
                height: "100dp"
                fill_color: 225/255, 217/255, 209/255, 1
            
            CustomTextField:
                id: edad_field
                hint_text: "Edad"

            CustomTextField:
                id: fecha_field
                hint_text: "Fecha (DD-MM-YYYY)"

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: "100dp"
                spacing: "10dp"

                MDLabel:
                    text: "Foto de la mascota:"
                    theme_text_color: "Custom"
                    text_color: 95/255, 79/255, 66/255, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: selected_file_label
                    text: "Ningún archivo seleccionado"
                    theme_text_color: "Custom"
                    text_color: 95/255, 79/255, 66/255, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDRaisedButton:
                    text: "Seleccionar archivo"
                    md_bg_color: 95/255, 79/255, 66/255, 1
                    text_color: 225/255, 217/255, 209/255, 1
                    size_hint_x: None
                    width: "200dp"
                    on_release: root.open_file_chooser()

            MDRaisedButton:
                text: "ENVIAR"
                md_bg_color: 95/255, 79/255, 66/255, 1
                size_hint_x: None
                width: "200dp"
                pos_hint: {"center_x": .5}
                on_release: root.submit_form()


<HowItWorksScreen>:
    canvas.before:
        # Configuración del fondo de la pantalla
        Color:
            rgba: 0.98, 0.96, 0.95, 1  # Color de fondo en tono claro
        Rectangle:
            pos: self.pos  # Posición de la pantalla
            size: self.size  # Tamaño de la pantalla

    MDBoxLayout:
        # Layout principal que contiene los elementos de la pantalla
        orientation: "vertical"  # Los elementos se apilan verticalmente
        spacing: "15dp"  # Espaciado entre los elementos

        MDTopAppBar:
            # Barra superior de la aplicación
            title: ""  # Sin texto en la barra
            md_bg_color: 95/255, 79/255, 66/255, 1  # Color de fondo marrón
            elevation: 2  # Elevación para crear efecto de sombra
            specific_text_color: 1, 1, 1, 1  # Color del texto en blanco
            NavigationBar:  # Barra de navegación personalizada

        ScrollView:
            # Contenedor con desplazamiento para los elementos
            MDBoxLayout:
                # Layout que organiza los elementos verticalmente
                orientation: "vertical"  # Los elementos se apilan verticalmente
                padding: "25dp"  # Margen interno alrededor del contenido
                spacing: "25dp"  # Espaciado entre los elementos
                size_hint_y: None  # Permite que la altura se ajuste según el contenido
                height: self.minimum_height  # Altura mínima ajustada al contenido

                # Primer bloque de información sobre cómo cargar una mascota perdida
                MDCard:
                    orientation: "vertical"  # Los elementos dentro se apilan verticalmente
                    padding: "20dp"  # Margen interno alrededor del contenido
                    spacing: "15dp"  # Espaciado entre los elementos
                    size_hint_y: None  # Altura ajustable
                    height: self.minimum_height  # Altura mínima
                    md_bg_color: 1, 1, 1, 1  # Color de fondo blanco
                    elevation: 1  # Elevación para efecto de sombra
                    radius: [10, 10, 10, 10]  # Bordes redondeados

                    MDLabel:
                        # Título de la sección "Cargar una Mascota Perdida"
                        text: "[b]Cargar una Mascota Perdida[/b]"
                        markup: True  # Permite el uso de texto con formato
                        font_style: "H5"  # Estilo de fuente
                        theme_text_color: "Custom"  # Color de texto personalizado
                        text_color: 95/255, 79/255, 66/255, 1  # Color marrón
                        size_hint_y: None  # Altura fija
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                    MDLabel:
                        # Descripción detallada de cómo cargar una mascota perdida
                        text: "Para cargar una mascota perdida, ingresá los detalles más importantes como:\n\n• Raza: Especificá la raza o una descripción general si es desconocida.\n• Color: Ayudá a los demás a identificarla rápidamente.\n• Ubicación: Indicá el lugar donde fue vista por última vez.\n• Fecha: Indicá la fecha cuando fue vista por última vez.\n• Fotos: Las imágenes claras ayudan mucho a la identificación.\n• Contacto: Dejá un número de teléfono para que los posibles halladores puedan comunicarse con vos."
                        theme_text_color: "Secondary"  # Color de texto secundario
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                # Segundo bloque de información sobre qué hacer si perdiste una mascota
                MDCard:
                    orientation: "vertical"  # Los elementos dentro se apilan verticalmente
                    padding: "20dp"  # Margen interno
                    spacing: "15dp"  # Espaciado entre los elementos
                    size_hint_y: None  # Altura ajustable
                    height: self.minimum_height  # Altura mínima
                    md_bg_color: 1, 1, 1, 1  # Fondo blanco
                    elevation: 1  # Sombra
                    radius: [10, 10, 10, 10]  # Bordes redondeados

                    MDLabel:
                        text: "[b]Perdí a mi Mascota[/b]"  # Título de la sección
                        markup: True  # Formato de texto enriquecido
                        font_style: "H5"  # Estilo de fuente
                        theme_text_color: "Custom"  # Color de texto personalizado
                        text_color: 95/255, 79/255, 66/255, 1  # Color marrón
                        size_hint_y: None  # Altura ajustada
                        height: self.texture_size[1]  # Ajuste al tamaño del texto

                    MDLabel:
                        # Descripción para quienes han perdido a su mascota
                        text: "Si perdiste tu mascota, simplemente ingresá sus datos en la sección de 'Cargar Mascota Perdida'. Asegurate de:\n\n• Actualizar tu ubicación: La información precisa aumenta las probabilidades de encontrarla.\n• Incluir una descripción detallada: Cualquier detalle específico como marcas o particularidades puede ser útil.\n• Revisar otras mascotas encontradas: Tal vez alguien haya visto a tu mascota y cargado su información en el sitio."
                        theme_text_color: "Secondary"  # Color de texto secundario
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                # Tercer bloque de información para quienes han encontrado una mascota
                MDCard:
                    orientation: "vertical"  # Los elementos dentro se apilan verticalmente
                    padding: "20dp"  # Margen interno
                    spacing: "15dp"  # Espaciado entre los elementos
                    size_hint_y: None  # Altura ajustable
                    height: self.minimum_height  # Altura mínima
                    md_bg_color: 1, 1, 1, 1  # Fondo blanco
                    elevation: 1  # Sombra
                    radius: [10, 10, 10, 10]  # Bordes redondeados

                    MDLabel:
                        text: "[b]Encontré una Mascota[/b]"  # Título de la sección
                        markup: True  # Texto con formato
                        font_style: "H5"  # Estilo de fuente
                        theme_text_color: "Custom"  # Color de texto personalizado
                        text_color: 95/255, 79/255, 66/255, 1  # Color marrón
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                    MDLabel:
                        # Descripción sobre cómo proceder si alguien encontró una mascota
                        text: "Si encontraste una mascota, te recomendamos seguir estos pasos:\n\n• Subí una foto clara para que el dueño pueda reconocerla rápidamente.\n• Incluí información relevante: Descripción, raza, color, características físicas y accesorios como collares o placas de identificación.\n• Comunicarse de inmediato: No dudes en dar un número de contacto para facilitar la conexión con el dueño."
                        theme_text_color: "Secondary"  # Texto secundario
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                # Cuarto bloque de preguntas frecuentes (FAQ)
                MDCard:
                    orientation: "vertical"  # Los elementos dentro se apilan verticalmente
                    padding: "20dp"  # Margen interno
                    spacing: "15dp"  # Espaciado entre los elementos
                    size_hint_y: None  # Altura ajustable
                    height: self.minimum_height  # Altura mínima
                    md_bg_color: 1, 1, 1, 1  # Fondo blanco
                    elevation: 1  # Sombra
                    radius: [10, 10, 10, 10]  # Bordes redondeados

                    MDLabel:
                        text: "[b]FAQs (Preguntas Frecuentes)[/b]"  # Título de la sección de FAQs
                        markup: True  # Formato de texto enriquecido
                        font_style: "H5"  # Estilo de fuente
                        theme_text_color: "Custom"  # Color de texto personalizado
                        text_color: 95/255, 79/255, 66/255, 1  # Color marrón
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                    MDLabel:
                        # Respuesta a la pregunta de qué datos cargar si se encontró una mascota
                        text: "[b][color=#927865]¿Qué datos puedo cargar si encontré una mascota?[/color][/b]\nTe sugerimos cargar los siguientes detalles:\n\n• Raza, color y características\n• Foto de la mascota\n• Descripción detallada de la zona donde fue encontrada\n• Fecha de hallazgo\n\nLa información más completa ayudará a la persona que busque su mascota a identificarla rápidamente."
                        theme_text_color: "Secondary"  # Texto secundario
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto

                    MDLabel:
                        # Respuesta a la pregunta de qué hacer si no se encuentra la mascota
                        text: "[b][color=#927865]¿Qué pasa si no encuentro a mi mascota?[/color][/b]\nEn caso de no encontrarla, seguí actualizando la información y asegurate de revisar periódicamente las mascotas que hayan sido encontradas."
                        theme_text_color: "Secondary"  # Texto secundario
                        size_hint_y: None  # Altura ajustable
                        height: self.texture_size[1]  # Ajuste de altura al tamaño del texto


